<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task name</th>
    <th>Task</th>
    <th>Status</th>
    <th>Dead line</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.task %></td>
    <td><%= task.status %></td>
    <td><%= task.dead_line %></td>
    <td><%= task.priority %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

